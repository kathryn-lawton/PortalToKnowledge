@model PortalToKnowledge.Models.Class

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Class</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Instructor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Instructor.FirstName) @Html.DisplayFor(model => model.Instructor.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Students:
        </dt>
        <dd></dd>

        @foreach(var student in Model.Students)
        {
            <dt></dt>

            <dd>
                @student.FirstName @student.LastName @Html.ActionLink("Remove", "RemoveStudent", new { id = student.StudentId })
            </dd>
        }
        <dt>

        </dt>


    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ClassId }) |
    @Html.ActionLink("Add Students", "AddStudent", new { id = Model.ClassId }) |
    @Html.ActionLink("Back to Classes", "ViewClasses", "Instructors")
</p>
