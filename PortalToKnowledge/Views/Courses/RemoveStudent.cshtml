@model PortalToKnowledge.ViewModels.StudentCourseViewModel
@{
    ViewBag.Title = "RemoveStudent";
}

<h2>Remove Student</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Remove student from course?</h4>
        <hr />

        @Html.HiddenFor(model => model.CourseId)
        @Html.HiddenFor(model => model.StudentId)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirm" align="left" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Students", "ViewStudents", "Instructors", new { id = Model.CourseId }, null)
</div>

